<UserControl x:Class="TextTutorial.InputForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
	d:DesignWidth="480" d:DesignHeight="348.845">

	<StackPanel Background="{StaticResource PhoneChromeBrush}">
		<StackPanel Margin="10,10,10,10">
			<TextBlock x:Name="fUsernameLabel" TextWrapping="Wrap" Text="Username"/>
			<TextBox x:Name="fUsernameTextBox" InputScope="Default"/>
			<TextBlock x:Name="fPasswordLabel" TextWrapping="Wrap" Text="Password"/>
			<PasswordBox x:Name="fPasswordTextBox"/>
			<StackPanel VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Center">
				<Button x:Name="fOkayButton" Content="Okay" Click="OkayButton_Click"/>
				<Button x:Name="fCancelButton" Content="Cancel" Click="CancelButton_Click"/>
			</StackPanel>
		</StackPanel>
	</StackPanel>

</UserControl>